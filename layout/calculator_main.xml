<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/answer"
        android:layout_width="0dp"
        android:layout_height="132dp"
        android:layout_marginEnd="-10dp"
        android:background="#FF4F4D4D"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginEnd="-10dp"
        android:background="#FF4F4D4D"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/DarkOrange"
        app:columnCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer"
        app:layout_constraintVertical_bias="0.0"
        app:rowCount="4">

        <Button
            android:id="@+id/seven"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/eight"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/nine"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/divide"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="4"
            app:layout_row="0" />


        <Button
            android:id="@+id/four"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/five"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/six"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="3"
            app:layout_row="1" />
        <Button
            android:id="@+id/fix1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="4"
            app:layout_row="1" />
        <Button
            android:id="@+id/one"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="0"
            app:layout_row="2" />
        <Button
            android:id="@+id/two"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="1"
            app:layout_row="2" />
        <Button
            android:id="@+id/three"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="2"
            app:layout_row="2" />
        <Button
            android:id="@+id/minus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="3"
            app:layout_row="2" />
        <Button
            android:id="@+id/fix2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="4"
            app:layout_row="2" />

        <Button
            android:id="@+id/zero"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="0"
            app:layout_row="3" />
        <Button
            android:id="@+id/decimal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="1"
            app:layout_row="3" />
        <Button
            android:id="@+id/fix3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="2"
            app:layout_row="3" />
        <Button
            android:id="@+id/add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="3"
            app:layout_row="3" />
        <Button
            android:id="@+id/equals"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="#FF4F4D4D"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_column="4"
            app:layout_row="3" />


    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>